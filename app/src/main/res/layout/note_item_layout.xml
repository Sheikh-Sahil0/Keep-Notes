<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="@color/white"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/green_border"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txt_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/dark_orange"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/belgrano"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/img_edit_btn"
                android:layout_alignBaseline="@id/img_edit_btn"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/img_edit_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/edit_icon"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:id="@+id/img_delete_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/delete_icon"
                android:layout_below="@id/img_edit_btn"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"
            android:fontFamily="@font/belgrano"
            android:layout_marginTop="4dp"
            android:maxLines="4"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
 